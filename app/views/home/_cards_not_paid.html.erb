<li>
    <div class="collapsible-header">
        <i class="material-icons">event_busy</i>
        A Pagar Vencidos
        <span class="badge"><%= (current_user.admin?) ? Card.not_paid.count : Card.not_paid.profissional.count %></span>
    </div>

    <div class="collapsible-body">
        <div class="row">
            <% if current_user.admin? %>
                <% Card.not_paid.each do |card| %>
                    <%= render 'to_do_cards', card: card %>
                <% end %>
            <% else %>
                <% Card.not_paid.profissional.each do |card| %>
                    <%= render 'to_do_cards', card: card %>
                <% end %>
            <% end %>
        </div>
    </div>
</li>